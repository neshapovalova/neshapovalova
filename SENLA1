package javaapplication1cur;
import java.util.Scanner;

public class JavaApplication1cur {

    public static void main(String[] args) {
        boolean qwe = true; 
        try {
            Scanner sc = new Scanner(System.in);
            System.out.println("Введите целое число: ");
            int a = sc.nextInt(); 
            {
                if(a%2==0){
                System.out.print("Число четное, ");}
            else System.out.print("Число не четное, ");}
            if (a==1) {
                qwe = false;}
            for (int d=2; d*d<=a; d++) {
                if (a%d==0) {
                    qwe = false;}
            }
            if (qwe= false) {
                System.out.println("составное. ");}
            else System.out.println("простое. ");
                
                
            
    } catch (Exception e) {
        System.out.println("Ошибка. Введено не целое число");
    }
        
    
    
    }	
} 
